{{ define "content" }}

<div id="main" class="wrapper style1">
   <div class="container">
      <!-- Content -->

        <section id="upper">
          <header class="">
            <div class="row">
              <div class="8u 12u align-left">
                <a href="/"><img src="/public/images/condor_logo.png" height="45px"/></a>
              </div>
              <div class="4u 12u">
                <select id="eventSelector" onChange='changeEvent(this[this.selectedIndex].value, this[this.selectedIndex].text, {{.TwitchUsername}});'>
                 <option value="" disabled>Events</option>
                 {{ range .FoundTables }}
                   <option value="{{ .EventName }}"> 
                   {{ .PrettyName }}
                   </option>
                 {{ end }}
                 </select>
              </div>
            </div>
          </header>
        </section>

      <table class="">
        <thead>
        </thead>
          <tbody id="info">
          <tr id="wins-tr">
            <td width="" id="wins-td">
              Wins: {{ .UserWins }} ({{ .WinPerc }}%)  | Losses: {{ .UserLosses }} ({{ .LossPerc }}%)
            </td>
            <td id="fastest-win">
              Fastest Win: {{ .FastTimeF }} | Average Win: {{ .AvgTimeF }}
            </td>
            <td width="" style="text-align: right">
              {{ if .TwitchUsername }}
              <a href="https://twitch.tv/{{ .TwitchUsername }}" target="_blank">
                <img src="/public/images/Glitch_White_RGB.png"  height="24px" width="24px"/>
              </a>
              {{ end }}
              {{ if .TwitterUsername }}
              <a href="https://twitter.com/{{ .TwitterUsername }}" target="_blank">
                <img src="/public/images/Twitter_Logo_Blue.png"  height="24px" width="24px"/>
              </a>
              {{ end }}
            </td>
          </tr>
        </tbody>
      </table>
      <section id="matches" class="box">
        <table class="table">
          <thead>
            <tr>
              <th class="results">
                League
              </th>
              <th class="results">
                Racer 1
              </th>
              <th class="results">
                Racer 2
              </th>
              <th class="results">
                Time
              </th>
              <th class="results">
                Seed
              </th>
              <th class="results">
                Type
              </th>
              <th class="results">
                VOD
              </th>
            </tr>
          </thead>
          <tbody id="races">
            <tr>
            {{ range .UserMatchInfo }}
              <td class="results">
                <img src="/public/images/{{ .LeagueTag }}.png" height="32px" title="{{ .LeagueTag }}"/>
              </td>
              <td class="results">
                <a href="/user/{{ .Racer1Name }}">{{ .Racer1Name }}</a> {{ if eq .RaceWinner  1 }} ðŸŽ‰{{ end }}
              </td>
              <td class="results">
                <a href="/user/{{ .Racer2Name }}">{{ .Racer2Name }}</a> {{ if eq .RaceWinner 2 }} ðŸŽ‰{{ end }}
              </td>
              <td class="results">
                {{ .RaceTimeF }}
              </td>
              <td class="results">
                {{ .RaceSeed }}
              </td>
              <td class="results">
                {{ if .IsAutoGen }} AutoGen {{ else }} Challenge {{ end }}
              </td>
              <td class="results">
                {{ if .RaceVod.Value }}
                <a href="{{ .RaceVod.String }}" target="_blank">ðŸŽ¥</a>
                {{ end }}
              </td>

            </tr>
            {{ end }}
          </tbody>
        </table>
      </section>
    </div>
    <input type="hidden" id="twitchUsername" value="{{.TwitchUsername}}" />
</div>

{{ end }}